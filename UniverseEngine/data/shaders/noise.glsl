	float lon = uv.x * 360.0;
	float lat = uv.y * 180.0;

	lon = radians(lon);
	lat = radians(lat);

	return normalize(vec3(cos(lat) * cos(lon), cos(lat) * sin(lon), sin(lat)));

}


